{
  "name": "redux-awaitable-thunk",
  "version": "1.0.0",
  "description": "A redux middleware that allows you to await completion of other in-progress thunks, allowing for complex flow control within thunks.",
  "main": "dist/awaitableThunkMiddleware.cjs.js",
  "module": "dist/awaitableThunkMiddleware.esm.js",
  "repository": "github:itaylor/thunk-centric-redux",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node node_modules/.bin/rollup -c",
    "dev": "node node_modules/.bin/rollup -c -w",
    "test": "NODE_ENV=test node node_modules/.bin/jest",
    "pretest": "yarn run build",
    "coverage": "node node_modules/.bin/jest --coverage",
    "precoverage": "yarn run build"
  },
  "keywords": [
    "redux",
    "middleware",
    "thunk",
    "flow-control",
    "thunk",
    "await"
  ],
  "author": "ian.b.taylor@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "jest": "^23.1.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "rollup": "^0.60.1"
  }
}
