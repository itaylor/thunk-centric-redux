{
  "name": "redux-thunk-recursion-detect",
  "version": "1.1.4",
  "description": "A drop-in replacement for `redux-thunk` that allows middleware to detect that a thunk has been dispatched from within another thunk",
  "main": "dist/reduxThunkRecursionDetect.cjs.js",
  "module": "dist/reduxThunkRecursionDetect.esm.js",
  "repository": "github:itaylor/thunk-centric-redux",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "build": "node node_modules/.bin/rollup -c",
    "dev": "node node_modules/.bin/rollup -c -w",
    "test": "NODE_ENV=test node node_modules/.bin/jest",
    "pretest": "yarn run build",
    "coverage": "node node_modules/.bin/jest --coverage",
    "precoverage": "yarn run build"
  },
  "keywords": [
    "redux",
    "thunk",
    "middleware",
    "recursion",
    "nested",
    "flow-control"
  ],
  "peerDependencies": {
    "redux": "^4.0.3"
  },
  "types": "index.d.ts",
  "author": "ian.b.taylor@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "jest": "^24.8.0",
    "redux": "^4.0.3",
    "rollup": "^1.15.3"
  }
}
